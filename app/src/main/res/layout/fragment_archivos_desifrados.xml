<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/degradado_azul_medio"
        tools:context=".Fragments.MenuPrincipal.ArchivosDesifrados">
    <ImageButton
        android:id="@+id/btnperfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        android:background="@android:color/transparent"
        android:layout_marginStart="330dp"
        android:layout_marginTop="55dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily\n Security Shield"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/flower" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Archivos Descifrados"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"/>

    <ListView
        android:id="@+id/listadesc"
        android:layout_width="349dp"
        android:layout_height="420dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:divider="@null"
        android:layout_marginTop="30dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="-6dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/housecolor"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/archivo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/archivo"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/candadoclose" />
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/carpeta"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/candadoopen"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/white"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    </LinearLayout>