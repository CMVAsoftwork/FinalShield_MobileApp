<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_azul_medio"
    tools:context=".Fragments.MenuPrincipal.CifradoEscaneo2">
    <LinearLayout
        android:id="@+id/dialogContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A0000000"
        android:orientation="vertical"
        android:gravity="center"
        android:elevation="10dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/dialogContentText"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/cuadrado"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="¿Estás seguro de que\nquieres descifrar el archivo?"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialogContentButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-60dp"
            android:layout_marginHorizontal="24dp"
            android:gravity="center">
            <Button
                android:id="@+id/sieliminar"
                android:text="Sí"
                android:backgroundTint="#FF4444"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"/>
            <Button
                android:id="@+id/noeliminar"
                android:text="No"
                android:backgroundTint="#1E90FF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:id="@+id/dialogContainer2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0000000"
    android:orientation="vertical"
    android:gravity="center"
    android:elevation="10dp"
    android:visibility="gone">
    <LinearLayout
        android:id="@+id/dialogContentText2"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/cuadrado"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="¿Estás seguro de que\nquieres eliminar el archivo?"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialogContentButtons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-60dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center">
        <Button
            android:id="@+id/sieliminar2"
            android:text="Sí"
            android:backgroundTint="#FF4444"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"/>
        <Button
            android:id="@+id/noeliminar2"
            android:text="No"
            android:backgroundTint="#1E90FF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>
    <ImageButton
        android:id="@+id/btnperfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        android:background="@android:color/transparent"
        android:layout_marginStart="330dp"
        android:layout_marginTop="55dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily\n Security Shield"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="28dp"/>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/flower" />
    </LinearLayout>

    <ListView
        android:id="@+id/listaescan"
        android:layout_width="349dp"
        android:layout_height="427dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:divider="@null"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="ESCANEAR Y CIFRAR"
        android:backgroundTint="#1E90FF"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="-6dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/housecolor"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/archivo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/iconazulinfo"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/candadoclose" />
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/scanblan"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/candadopen"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>