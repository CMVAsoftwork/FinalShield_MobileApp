<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_negro_azul"
    tools:context=".Fragments.Escaner.VisualizacionYReordenamiento">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regresar3"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#10FFFFFF"
            android:text="â†"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="40dp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerR"
        android:layout_width="match_parent"
        android:layout_height="590dp"
        android:layout_marginTop="110dp"
        android:clipToPadding="false"
        android:padding="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="700dp"
        android:background="@drawable/img">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="710dp"
        android:layout_marginLeft="-10dp">
        <ImageButton
            android:id="@+id/scancam"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/scann"
            android:scaleType="fitCenter"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/selecgaleria"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/picture"
            android:scaleType="fitCenter"
            android:layout_marginStart="45dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/recortar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/recortar" />
        <ImageButton
            android:id="@+id/edicion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ordencircle"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/eliminar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/basurita"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</FrameLayout>