<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_negro_azul"
    tools:context=".Fragments.EscanerCifradoMixto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regresar1"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#10FFFFFF"
            android:gravity="center"
            android:text="←"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="40dp" />
        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="30dp"
            android:text="Guardar PDF"
            android:textColor="@color/white"
            android:backgroundTint="@color/degradado_negro_azul"
            android:textAlignment="center" />
    </LinearLayout>
    <androidx.camera.view.PreviewView
        android:id="@+id/vistaprevia"
        android:layout_width="280dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="40dp"
        android:layout_height="350dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="520dp"
                android:backgroundTint="#9BB9FF" />

            <ImageView
                android:id="@+id/imagencita"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="520dp"
                android:background="@android:color/darker_gray"
                android:contentDescription="Última foto"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/Contadorfot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="475dp"
                android:text="#"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.camera.view.PreviewView>
    <ImageView
        android:id="@+id/overlay"
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/cam"
        android:scaleType="fitXY"
        android:alpha="0.3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="670dp"
        android:background="@drawable/img">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="695dp"
        android:layout_marginLeft="8dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:scaleType="fitCenter"
            android:layout_marginStart="-10dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/hojitamas" />
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/recortar" />
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hojitas"
            android:scaleType="fitCenter"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/basurita"
            android:scaleType="fitCenter"
            android:layout_marginStart="35dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>


</RelativeLayout>