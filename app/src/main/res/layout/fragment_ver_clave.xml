<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Correo.VerClave"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#C8E4FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Ver Contenido del Correo Seguro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token de Enlace Seguro:"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etTokenSeguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pega el enlace o token aquÃ­"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnVerContenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Contenido"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contenido del Correo Descifrado:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvContenidoDescifrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:padding="8dp"
            android:background="@android:color/darker_gray"
            android:hint="El contenido aparecerÃ¡ aquÃ­ una vez descifrado."
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivos Adjuntos:"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layoutAdjuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#CCCCCC"/>

        <ProgressBar
            android:id="@+id/pbDescargaAdjuntos"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>