<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Correo.VerClave"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/degradado_negro_azul">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/regresarEnlace"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="37dp"
            android:backgroundTint="#10FFFFFF"
            android:text="â†"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ” Ver Contenido del Correo Seguro"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token de Enlace Seguro:"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="17dp"/>

        <EditText
            android:id="@+id/etTokenSeguro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pega el enlace o token aquÃ­"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16dp"
            android:paddingStart="49dp"
            android:background="@drawable/edittextshape"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnVerContenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Ver Contenido"
            android:backgroundTint="#1E90FF"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contenido del Correo Descifrado:"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="17dp"/>


        <TextView
            android:id="@+id/tvContenidoDescifrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:padding="8dp"
            android:background="@color/white"
            android:hint="El contenido aparecerÃ¡ aquÃ­ una vez descifrado."
            android:textColorHint="@color/degradado_negro_azul"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivos Adjuntos:"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"/>

        <LinearLayout
            android:id="@+id/layoutAdjuntos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009607"
            android:orientation="vertical"
            android:padding="8dp" />

        <ProgressBar
            android:id="@+id/pbDescargaAdjuntos"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    </LinearLayout>

</ScrollView>