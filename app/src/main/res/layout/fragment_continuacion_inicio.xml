<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_azul_medio"
    tools:context=".Fragments.MenuPrincipal.ContinuacionInicio">
    <ImageButton
        android:id="@+id/btnperfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        android:background="@android:color/transparent"
        android:layout_marginStart="330dp"
        android:layout_marginTop="55dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="90dp"
            android:text="Daily\n Security Shield"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/flower" />
    </LinearLayout>
    <ImageView
        android:layout_width="251dp"
        android:layout_height="97dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/grafica" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Archivos"
        android:textColor="@color/white"
        android:layout_marginStart="50dp"
        android:layout_marginTop="270dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="310dp">
        <TextView
            android:id="@+id/numcifrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      #       "
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/numcorreosenviados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="          #"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/numarchivosdescifrados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="                 #"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="360dp">
        <TextView
            android:id="@+id/cifrados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archivos\n cifrados"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/correosenviados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Correos\n enviados"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/archivosdescifrados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Archivos\n descifrados"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text=" fecha "
            android:textColor="@color/white"/>
    </LinearLayout>
    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/back1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="420dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CORREOS/MENSAJES ESTATUS"
        android:layout_marginTop="450dp"
        android:textColor="@color/white"
        android:layout_marginStart="90dp"
        android:textSize="11dp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:src="@drawable/linea"
        android:layout_marginTop="460dp"
        android:layout_centerHorizontal="true"/>
    <ListView
        android:id="@+id/listarchivos"
        android:layout_width="178dp"
        android:layout_height="130dp"
        android:layout_marginTop="480dp"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="710dp"
        android:layout_marginLeft="-15dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="29dp"
            android:src="@drawable/house"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/archivo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/archivo"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/candadoclose"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/carpeta"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/candadopen"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>