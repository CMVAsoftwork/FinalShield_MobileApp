<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_azul_medio"
    tools:context=".Fragments.Inicio">

    <ImageButton
        android:id="@+id/btnperfil"
        android:layout_width="69dp"
        android:layout_height="97dp"
        android:layout_marginStart="350dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily\n Security Shield"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            android:layout_marginTop="90dp"/>

        <ImageView
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/flower" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="-18dp">
        <Button
            android:id="@+id/btnseleccarpeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:backgroundTint="#1E90FF"
            android:text="SELECCIONAR\nCARPETA"
            android:textSize="11dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnenvcorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#1E90FF"
            android:text="ENVIAR CORREO/\nMENSAJE"
            android:textSize="11dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/back"
        android:layout_marginTop="270dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ÃšLTIMOS\n ARCHIVOS"
        android:layout_marginTop="300dp"
        android:textColor="@color/white"
        android:layout_marginStart="90dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/listarchivos"
        android:layout_width="178dp"
        android:layout_height="286dp"
        android:layout_marginTop="360dp"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="710dp"
        android:layout_marginLeft="-15dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="29dp"
            android:src="@drawable/house"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/archivo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/archivo"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/candadoclose"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/carpeta"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/candadopen"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>