<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_negro_azul"
    tools:context=".Fragments.EscanerCifrado">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regresar1"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#10FFFFFF"
            android:text="←"
            android:textAlignment="center"
            android:textSize="40dp" />
        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"
            android:text="Guardar pdf"
            android:backgroundTint="@color/degradado_negro_azul"
            android:textAlignment="center" />
    </LinearLayout>
    <androidx.camera.view.PreviewView
        android:id="@+id/vistaprevia"
        android:layout_width="280dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="65dp"
        android:layout_height="350dp" />
    <ImageView
        android:id="@+id/overlay"
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="65dp"
        android:src="@drawable/cam"
        android:scaleType="fitXY"
        android:alpha="0.3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="163dp"
            android:backgroundTint="#9BB9FF"
            android:layout_marginTop="490dp"/>
        <ImageView
            android:id="@+id/imagencita"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="50dp"
            android:layout_marginTop="490dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Última foto" />
        <TextView
            android:id="@+id/Contadorfot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="445dp"
            android:text="#"

            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:src="@drawable/img"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="630dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/archivo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/picture"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/hojitamas" />
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/recortar" />
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hojitas"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/basurita"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>


</RelativeLayout>