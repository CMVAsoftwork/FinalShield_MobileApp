<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_negro_azul"
    tools:context=".Fragments.Seleccion_imagenes">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regresar1"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#10FFFFFF"
            android:gravity="center"
            android:text="â†"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="40dp" />
        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="30dp"
            android:text="Hecho"
            android:textColor="@color/white"
            android:backgroundTint="@color/degradado_negro_azul"
            android:textAlignment="center" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:layout_marginTop="100dp"
        android:padding="8dp"
        android:id="@+id/recycler" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="670dp"
        android:background="@drawable/img">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="695dp"
        android:layout_marginLeft="-26dp">
        <ImageButton
            android:id="@+id/scancam"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/scann"
            android:scaleType="fitCenter"
            android:layout_marginStart="40dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/selecgaleria"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circlepicture"
            android:scaleType="fitCenter"
            android:layout_marginStart="20dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/addelements"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/hojitamas" />
        <ImageButton
            android:id="@+id/recortar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/recortar" />
        <ImageButton
            android:id="@+id/edicion"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hojitas"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/eliminar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/basurita"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>
</RelativeLayout>