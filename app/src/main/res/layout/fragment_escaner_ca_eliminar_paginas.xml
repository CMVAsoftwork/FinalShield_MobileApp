<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_negro_azul"
    tools:context=".Fragments.EscanerCa.EscanerCaEliminarPaginas">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regresar4"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#10FFFFFF"
            android:textColor="@color/white"
            android:text="←"
            android:textAlignment="center"
            android:textSize="40dp" />
        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:text="Hecho"
            android:backgroundTint="@color/degradado_negro_azul"
            android:textAlignment="center" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageToEdit"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="110dp"
        android:clipToPadding="false"
        android:padding="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/cuadrado">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:text="¿Estás seguro de que
 quieres eliminar lo seleccionado?"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="250dp">
        <Button
            android:id="@+id/sieliminar"
            android:text="Si"
            android:backgroundTint="#1E90FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/noeliminar"
            android:text="No"
            android:backgroundTint="#1E90FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="670dp"
        android:background="@drawable/img">
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="695dp"
        android:layout_marginLeft="-22dp">
        <ImageButton
            android:id="@+id/scancam1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/scann"
            android:scaleType="fitCenter"
            android:layout_marginStart="70dp"
            android:background="@android:color/transparent"/>
        <!--  <ImageButton
             android:id="@+id/addelements1"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginStart="50dp"
             android:background="@android:color/transparent"
             android:scaleType="fitCenter"
             android:src="@drawable/hojitamas" />-->
         <ImageButton
             android:id="@+id/recortar1"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginStart="50dp"
             android:background="@android:color/transparent"
             android:scaleType="fitCenter"
             android:src="@drawable/recortar" />
         <ImageButton
             android:id="@+id/edicion1"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:src="@drawable/hojitas"
             android:scaleType="fitCenter"
             android:layout_marginStart="50dp"
             android:background="@android:color/transparent"/>
         <ImageButton
             android:id="@+id/eliminar1"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:src="@drawable/basuritacicle"
             android:scaleType="fitCenter"
             android:layout_marginStart="50dp"
             android:background="@android:color/transparent"/>
     </LinearLayout>
 </RelativeLayout>