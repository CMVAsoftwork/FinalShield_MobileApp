<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/degradado_negro_azul"
    tools:context=".Fragments.EliminarPaginas">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/regresar1"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#10FFFFFF"
            android:text="←"
            android:textAlignment="center"
            android:textSize="40dp" />
        <Button
            android:id="@+id/guardar"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="5dp"
            android:text="Hecho"
            android:backgroundTint="@color/degradado_negro_azul"
            android:textAlignment="center" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/imageToEdit"
        android:layout_width="400dp"
        android:layout_height="348dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="180dp"
        android:clipToPadding="false"
        android:padding="30dp" />
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/cuadrado">
        <TextView
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginStart="4dp"
            android:text="¿Estás seguro de que
 quieres eliminar lo seleccionado?"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="250dp">
    <Button
        android:id="@+id/sieliminar"
        android:text="Si"
        android:backgroundTint="#1E90FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"/>
    <Button
        android:id="@+id/noeliminar"
        android:text="No"
        android:backgroundTint="#1E90FF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"/>
</LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:src="@drawable/img"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="630dp">
        <ImageButton
            android:id="@+id/house"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/scann"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/archivo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/picture"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadoclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/hojitamas" />
        <ImageButton
            android:id="@+id/carpeta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/recortar" />
        <ImageButton
            android:id="@+id/mail"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/hojitas"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/candadopen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/basuritacicle"
            android:scaleType="fitCenter"
            android:layout_marginStart="30dp"
            android:background="@android:color/transparent"/>
    </LinearLayout>



</RelativeLayout>